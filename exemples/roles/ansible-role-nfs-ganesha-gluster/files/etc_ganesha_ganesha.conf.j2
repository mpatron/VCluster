NFS_CORE_PARAM {
    # possible to mount with NFSv3 to NFSv4 Pseudo path
    mount_path_pseudo = true;
    # NFS protocol
    Protocols = 3,4;
}
EXPORT_DEFAULTS {
    # default access mode
    Access_Type = RW;
}
EXPORT {
    # uniq ID
    Export_Id = 101;
    # mount path of Gluster Volume
    Path = "/{{ nfs-ganesha_volume_name }}";
    FSAL {
      # any name
      name = GLUSTER;
      # hostname or IP address of this Node
      hostname="{{ nfs-ganesha_hostname }}";
      # Gluster volume name
      volume="{{ nfs-ganesha_volume_name }}";
      enable_upcall = true;
      Transport = tcp; # tcp or rdma
    }
    # config for root Squash
    Squash="No_root_squash";
    # NFSv4 Pseudo path
    Pseudo="/{{ nfs-ganesha_volume_name }}";
    # allowed security options
    SecType="sys";
}
LOG {
    # default log level DEBUG WARN
    Default_Log_Level = DEBUG;
}
